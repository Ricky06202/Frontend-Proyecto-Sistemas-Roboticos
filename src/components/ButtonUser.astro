---
import { LandingPages, UserPages } from "@constants/pages";

interface Props {
  class?: string;
  user: string;
  email: string;
}
const { user, email, class: className } = Astro.props;
---

<div class="grid">
  <div class="">
    <button
      class={"relative px-5 py-3 text-3xl rounded-lg group text-black dark:text-white dark:bg-gray-50" +
        className}
      ><img src="/images/account-circle.png" alt="" class="w-20" />

      <div
        class="absolute w-80 mt-1 top-full right-0 rounded-lg text-left bg-white text-gray-700 dark:bg-black dark:text-white pt-1 shadow-md scale-y-0 group-focus:scale-y-100 origin-top duration-200"
      >
        <div
          class="flex flex-col p-5 space-y-3 text-lg font-extrabold opacity-70 dark:text-white dark:opacity-80"
        >
          <h3 class="">
            {user}
          </h3>
          <h3 class="">
            {email}
          </h3>
        </div>
        <div class="flex flex-col p-2 text-center text-xl">
