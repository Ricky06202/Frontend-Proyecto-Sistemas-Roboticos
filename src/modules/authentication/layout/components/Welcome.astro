---
import Logo from '@components/Logo.astro'
import imagenBienvenida from '../assets/TechClassroom.jpg'
---

<aside class='flex flex-col items-center gap-10'>
	<Logo />
	<p class='text-gray-600 text-center w-72 lg:w-96'>
		Join our community of educators and learners. Be part of our mission. Be part of our journey.
	</p>
	<picture class='w-72 lg:w-96'>
		<img
			src={imagenBienvenida.src}
			alt='imagen bienvenida'
		/>
	</picture>
</aside>
