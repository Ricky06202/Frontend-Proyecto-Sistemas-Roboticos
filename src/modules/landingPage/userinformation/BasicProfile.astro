---
import { AccountCircle } from "./iconos/Account";
import Edit_Input from "@landingPage/userinformation/components/Edit_Input";

interface Props {
  class?: string;
  user: string;
  name: string;
  lastname: string;
  email: string;
}
const { user, name, lastname, email, class: className } = Astro.props;
---

<div
  class="grid grid-cols-2 rounded-xl border border-black/10 dark:bg-gray-500 dark:border-white/30 shadow-md p-5 justify-start gap-4"
>
  <div>
    <AccountCircle />
    <img
      src="/images/account.svg"
      alt=""
      class="w-24 fill-current dark:fill-white"
    />
    <div class="flex flex-col text-xl dark:text-white space-y-2">
      <a class="flex font-semibold gap-4 items-center"
        >{name}
        {lastname}
      </a>

      <a class="flex font-semibold gap-4 items-center"
        >{user}
        <Edit_Input client:load />
      </a>
      <a class="flex font-semibold gap-4 items-center"
        >{email}
        <Edit_Input client:load />
      </a>
    </div>
  </div>
</div>
