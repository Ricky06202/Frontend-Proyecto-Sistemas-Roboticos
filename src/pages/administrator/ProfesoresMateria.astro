---
import StudentLayout from '@attendance/layouts/StudentLayout.astro';
---

<StudentLayout title='Asignación de Profesores a Materias'>
    <div class="container mx-auto px-4 py-8 animate-fadeIn">
        <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-100 hover:shadow-xl transition-shadow duration-300">
            <h1 class="text-3xl font-bold text-gray-800 mb-6 relative after:content-[''] after:block after:w-20 after:h-1 after:bg-indigo-600 after:mt-2">
                Asignación de Profesores a Materias
            </h1>

            <form class="space-y-6">
                <!-- Selector de Profesor -->
                <div class="space-y-2 transform hover:scale-[1.01] transition-transform duration-300">
                    <label for="profesor" class="block text-sm font-semibold text-gray-700">
                        Profesor
                    </label>
                    <select 
                        id="profesor" 
                        name="profesor" 
                        class="w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 transition-all duration-300 hover:border-indigo-400"
                    >
                        <option value="">Seleccione un profesor</option>
                        <!-- Opciones dinámicas aquí -->
                    </select>
                </div>

                <!-- Selector de Materia -->
                <div class="space-y-2 transform hover:scale-[1.01] transition-transform duration-300">
                    <label for="materia" class="block text-sm font-semibold text-gray-700">
                        Materia
                    </label>
                    <select 
                        id="materia" 
                        name="materia" 
                        class="w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 transition-all duration-300 hover:border-indigo-400"
                    >
                        <option value="">Seleccione una materia</option>
                        <!-- Opciones dinámicas aquí -->
                    </select>
                </div>

                <!-- Selector de Horarios -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-gray-700">
                        Horarios Disponibles
                    </label>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        <div class="flex items-center p-3 rounded-lg border border-gray-200 hover:border-indigo-400 hover:bg-indigo-50 transition-colors duration-300">
                            <input 
                                type="checkbox" 
                                id="horario1" 
                                name="horarios[]" 
                                class="w-4 h-4 rounded text-indigo-600 focus:ring-indigo-500 cursor-pointer"
                            >
                            <label for="horario1" class="ml-3 text-sm text-gray-700 cursor-pointer hover:text-indigo-600 transition-colors duration-300">
                                Lunes 7:00 - 9:00
                            </label>
                        </div>
                        <!-- Más horarios aquí -->
                    </div>
                </div>

                <!-- Botón de Guardar -->
                <div class="flex justify-end">
                    <button
                        type="submit"
                        class="group relative inline-flex items-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-indigo-700 text-white rounded-lg font-semibold shadow-md hover:from-indigo-700 hover:to-indigo-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transform hover:scale-[1.02] transition-all duration-300"
                    >
                        <span class="relative">Guardar Asignación</span>
                    </button>
                </div>
            </form>

            <!-- Tabla de Asignaciones -->
            <div class="mt-12">
                <h2 class="text-2xl font-bold text-gray-800 mb-6 relative after:content-[''] after:block after:w-16 after:h-1 after:bg-indigo-600 after:mt-2">
                    Asignaciones Actuales
                </h2>
                <div class="overflow-x-auto rounded-lg border border-gray-200 shadow-md">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
                            <tr>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Profesor</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Materia</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Horarios</th>
                                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <tr class="hover:bg-gray-50 transition-colors duration-200">
                                <td class="px-6 py-4 whitespace-nowrap">Eloy </td>
                                <td class="px-6 py-4 whitespace-nowrap">Sistemas Robóticos</td>
                                <td class="px-6 py-4">Lunes 7:00 - 9:00</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex space-x-2">
                                        <button class="text-blue-600 hover:text-blue-800 transition-colors duration-200">
                                            Editar
                                        </button>
                                        <button class="text-red-600 hover:text-red-800 transition-colors duration-200">
                                            Eliminar
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</StudentLayout>

<style>
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .animate-fadeIn {
        animation: fadeIn 0.5s ease-out forwards;
    }
</style>

